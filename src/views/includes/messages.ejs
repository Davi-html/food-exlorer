<% if (errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert text-tomato100">
        <% errors.forEach(erro => { %>
        <%= erro %><br>
        <% }); %>
      </div>
    </div>
  </div>
<% } %>

<% if (success.length > 0) { %>
<div class="row">
  <div class="col my-3">
    <div class="alert text-tomato100">
      <% success.forEach(success => { %>
      <%= success %><br>
      <% }); %>
    </div>
  </div> 
</div>
<% } %>